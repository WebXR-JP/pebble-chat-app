:{{ caddy_http_port }} {
    # HLS配信（MediaMTXからプロキシ）
    reverse_proxy /*/index.m3u8 localhost:{{ mediamtx_port_hls }}
    reverse_proxy /*/*.ts localhost:{{ mediamtx_port_hls }}

    # ヘルスチェック
    respond /health "OK" 200

    # CORS対応
    header Access-Control-Allow-Origin "*"
    header Access-Control-Allow-Methods "GET, HEAD, OPTIONS"
    header Access-Control-Allow-Headers "*"
}
