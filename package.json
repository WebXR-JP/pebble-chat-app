{
  "name": "pebble-chat",
  "version": "0.2.1",
  "description": "VRChat向けの簡単配信アプリ - PebbleChat",
  "main": "./out/main/index.js",
  "author": "WebXR-JP",
  "license": "MIT",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "build:mac": "npm run build && electron-builder --mac",
    "build:win": "npm run build && electron-builder --win",
    "build:linux": "npm run build && electron-builder --linux",
    "preview": "electron-vite preview",
    "lint": "eslint . --ext .ts,.tsx",
    "typecheck:main": "tsc --noEmit -p tsconfig.node.json",
    "typecheck:preload": "tsc --noEmit -p tsconfig.node.json",
    "typecheck:renderer": "tsc --noEmit -p tsconfig.web.json",
    "typecheck": "npm run typecheck:main && npm run typecheck:preload && npm run typecheck:renderer",
    "test": "vitest run",
    "test:watch": "vitest",
    "pack:booth": "npm run build:mac && npm run build:win && node scripts/pack-booth.mjs"
  },
  "dependencies": {
    "@sentry/electron": "^7.7.1",
    "cloudflared": "^0.7.1",
    "tar": "^7.0.0",
    "unzipper": "^0.12.0"
  },
  "devDependencies": {
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/utils": "^3.0.0",
    "@types/node": "^20.14.8",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/unzipper": "^0.10.10",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "@vitejs/plugin-react": "^4.3.1",
    "electron": "^31.0.0",
    "electron-builder": "^26.4.0",
    "electron-vite": "^2.3.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "typescript": "^5.5.2",
    "vite": "^5.3.1",
    "vitest": "^4.0.18"
  }
}
